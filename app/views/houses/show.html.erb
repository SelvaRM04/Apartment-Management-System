      <p style="background-color: rgb(15, 247, 131); position:relative;width:50%;height:40px;padding-top:7px; border-radius: 5px; border: 1px solid rgb(0,100,0); color: rgb(0,100,0)">
        <%= notice %>
        <a href="" >
          <i style="position:absolute; top:10px;right:10px;color:rgb(0,100,0)" class="fa fa-close "></i>
        </a>
      </p>
    </center>
  <% end %>

  <% if alert!=nil %>
    <center>
      <p style="background-color: rgb(247, 198, 198); position:relative;width:50%;height:40px;padding-top:7px; border-radius: 5px; border: 1px solid rgb(168, 25, 25); color: rgb(168, 25, 25)">
        <%= alert %>
        <a href="" >
          <i style="position:absolute; top:10px;right:10px; color:rgb(168, 25, 25)" class="fa fa-close "></i>
        </a>
      </p>
    </center>
  <% end %>
  <br>
<div>
<% @messages_unread_count = 0 %>
<% @apartment = Block.find(@house.block_id).apartment_id %>
    <% if @messages %>
      <% @messages.each do |msg| %>
        <% if msg.status == false and msg.to_id==session[:user] %>
        <% # debugger %>
          <% @messages_unread_count += 1 %>
        <% end %>
      <% end %>
    <% end %>
<% if @messages_unread_count > 0 %>
  <div id="houses" class="my-5" style="border: 1px solid black;padding-left:30px;margin-left:30px;margin-right:30px;background-color:rgb(133, 190, 237);padding:50px;">
<% else %>
  <div id="houses" class="my-5" style="border: 1px solid black;padding-left:30px;margin-left:30px;margin-right:30px;background-color: rgb(255,244,120);padding:50px;">
<% end %>
<p>
  <strong>Apartment:</strong>
  <%= Apartment.find(Block.find(@house.block_id).apartment_id).name %>
</p>

<p>
  <strong>Block:</strong>
  <%= Block.find(@house.block_id).name %>
</p>

<p>
  <strong>Doorno:</strong>
  <%= @house.doorno %>
</p>

<% if session[:desig] != "Owner" %>
  <p>
    <strong>Owner:</strong>
    <%= Owner.find(@house.owner_id).name %>
  </p>
<% end %>

<p>
  <strong>Tenant :</strong>
  <% if @house.tenant!=nil %>
    <%= @house.tenant.name %>
  <% else %>
    Not Occupied
  <% end %>
</p>

<% if session[:desig] == "Owner" %>
  <% if @house.tenant!=nil %>
    <%= link_to "Ask for Rent", new_message_path(desig:"tenant",to_id:@house.tenant, type:"rent" ), method: :get, class:"btn btn-success" %>
  <% end %>
    
<% elsif session[:desig] == "Tenant" %>
    <%= link_to "Message Owner", new_message_path(to_id: Owner.find(@house.owner_id), desig: "owner", type:"general"), class:"btn btn-success" %>
    <%= button_to "Emergency", messages_path, method: :post, params: {message_type: "emergency"}, class:"btn btn-success" %>
<% elsif session[:desig] == "Security" %>
  <% if @house.tenant!=nil %>
    <%= link_to "Ask for Approval", new_message_path(desig:"tenant",to_id:@house.tenant, type:"approval" ), method: :get, class:"btn btn-success" %>
  <% end %>
<% end %>
</div>
</div>






<h1>Messages</h1><%= @messages_unread_count.to_s+" new messages" if @messages_unread_count > 0 %>

<div id="messages">
  <% if !@messages or @messages.length == 0 %>
    <div class="border border-dark p-5 w-50 h-100 m-auto " style="background-color:rgb(255,244,120)">
      <p class="text-center fs-2">No Messages :(</p>
    </div>
    <br>
  <% else %>
    <% messages = [] %>
    <% @messages.each do |message| %>
      <% if message.status == false && message.from_desig != session[:desig] %>
        <% messages << message %>
      <% end %>
    <% end %>

    <% @messages.each do |message| %>
      <% if !(message.status == false && message.from_desig != session[:desig] )%>
        <% messages << message %>
      <% end %>
    <% end %>

    <% messages.each do |message| %>
      <% if message.status == true || message.from_desig == session[:desig] %>
        <div class="bg-warning">
      <% else %>
        <div style="background-color: rgb(133, 190, 237)">
      <% end %>

        <%= render message %>
        
        <p>
          <% if session[:desig] == "Tenant" && message.message_type=="approval" %>
            <% if message.status == false %>
              <%= button_to "Approve", approve_path, method: :post, params: {message_id: message.id, house_id: @house} %>
            <% else %>
              <%= button_to "Approved", :disabled => true %>
            <% end %>
          <% elsif session[:desig] == "Security" && message.message_type=="approval" %>
            <% if message.status == false %>
              <%= link_to "Waiting for approval", class:"btn btn-success" %>
            <% else %>
              <%= button_to "Approved", :disabled => true %>
            <% end %>
          <% elsif session[:desig] == "Security" && message.message_type == "emergency" %>
            <% if message.status == false %>  
              <%= button_to "Mark as read", approve_path, method: :post, params: {message_id: message.id, house_id: @house} %>
            <% end %>
          <% elsif message.message_type != "emergency" %>
            <%= link_to "Show this message", message, class:"btn btn-success" %>
          <% end %>
          <% if message.from_desig == session[:desig] %>
            <% if message.status == true %>
              Read &#10004;
            <% else %>
              Received &#10003;
            <% end %>
          <% end %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>
