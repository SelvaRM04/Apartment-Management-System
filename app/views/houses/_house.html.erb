


  <div id="<%= dom_id house %>">
    <% @messages_unread_count = 0 %>
    <% house.messages.each do |msg| %>
      <% if msg.status == false and msg.from_id!=session[:user]%>
        <% @messages_unread_count += 1 %>
      <% end %>
    <% end %>

    <%= link_to house_path(house), class:"text-decoration-none text-dark" do%>
    <% if @messages_unread_count > 0 %>
      <div id="houses" class="my-5" style="border: 1px solid black;padding-left:30px;margin-left:30px;margin-right:30px;background-color:rgb(133, 190, 237);padding:50px;">
    <% else %>
      <div id="houses" class="my-5" style="border: 1px solid black;padding-left:30px;margin-left:30px;margin-right:30px;background-color: rgb(255,244,120);padding:50px;">
    <% end %>
    <p>
      <strong>Apartment:</strong>
      <%= Apartment.find(Block.find(house.block_id).apartment_id).name %>
    </p>
    
    <p>
      <strong>Block:</strong>
      <%= Block.find(house.block_id).name %>
    </p>
  
    <p>
      <strong>Doorno:</strong>
      <%= house.doorno %>
    </p>


    <p>
      <strong>Tenant :</strong>
      <% if house.tenant!=nil %>
        <%= house.tenant.name %>
      <% else %>
        Not Occupied
      <% end %>
    </p>

    <%= link_to house_path(house) , class:"btn btn-warning" do%>Go here
      <% end %>
    <% if @messages_unread_count > 0 %>
      <%= @messages_unread_count %> new messages
      <% if session[:desig] == "Security" %><%= button_to "Emergency", :disabled=>true %><% end %>
    <% end %>
  </div>
</div>

<% end %>
