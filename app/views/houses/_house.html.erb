
<% @owner = Owner.find(house.owner_id) %>
  
<div id="<%= dom_id house %>">
  <% @messages_unread_count = 0 %>
  <% house.messages.each do |msg| %>
    <% if msg.status == false and msg.from_id!=session[:user]%>
      <% @messages_unread_count += 1 %>
    <% end %>
  <% end %>
      
  <%= link_to house_path(house), class:"text-decoration-none text-dark" do%>
    <% if @messages_unread_count > 0 %>
      <div id="houses" class="my-3" style="border: 1px solid black;padding-left:30px;margin-left:30px;margin-right:30px;background-color:rgb(133, 190, 237);padding:50px;">
    <% else %>
      <div id="houses" class="my-3" style="border: 1px solid black;padding-left:30px;margin-left:30px;margin-right:30px;background-color: rgb(255,244,120);padding:50px;">
    <% end %>
    
      <p>
        <strong>Apartment:</strong>
        <%= Apartment.find(Block.find(house.block_id).apartment_id).name %>
      </p>
      
      <p>
        <strong>Block:</strong>
        <%= Block.find(house.block_id).name %>
      </p>
    
      <p>
        <strong>Doorno:</strong>
        <%= house.doorno %>
      </p>

      <% if session[:desig] != "Owner" %>
        <p>
          <strong>Owner:</strong>
          <%= Owner.find(house.owner_id).name %>
        </p>
      <% end %>

      <% if session[:desig] != "Tenant" %>
        <p>
          <strong>Tenant :</strong>
          <% if house.tenant!=nil %>
            <%= house.tenant.name %>
          <% else %>
            Not Occupied
          <% end %>
        </p>
      <% end %>
        
      <%= link_to house_path(house) , class:"btn btn-warning" do%>Go here <% end %>
      
      <% if @messages_unread_count > 0 %>
        <%= @messages_unread_count %> new messages
      <% end %>
 
      <% if session[:desig] == "Admin" %>
        <%= link_to "View Owner", owner_path(@owner), class:"btn btn-success" %>
        <%= button_to "Delete House", house, method: :delete , data: { turbo_confirm: "Are you sure?" }, class:"btn btn-success", style:"margin-right:40px"%>
      <% end %>
      
      <% if @messages_unread_count > 0 %>
        <% if session[:desig] == "Security" %>
          <%= button_to "Emergency", :disabled=>true , class:"btn btn-alert" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
