<p style="color: green"><%= notice %></p>

<h1>Messages</h1><%= link_to "Back", root_path, class:"btn btn-dark" %>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
    <p>
      <%= link_to "Show this message", message %>
    </p>
  <% end %>
</div>

<%= link_to "New message", new_message_path %>
