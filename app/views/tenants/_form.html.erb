<body class="bg-warning">
<%= form_with(model: tenant,url: "/tenants", method: :post) do |form| %>
  
  <%= javascript_include_tag "application" %>
  <div class="text-center border border-warning align-items-center border border-dark", style=" width :400px ;background-color: rgb(255,244,120); margin-left:720px;margin-top:50px;padding-left:35px;padding:20px; position:relative">
  <div class="form-group my-3">
    <strong><%= form.label :name, style: "display: block" , class:"control-label mb-2 col-sm-2"%></strong>
    <%= form.text_field :name, placeholder: "Enter a name" , class:"form-control w-75 border border-dark" %>
  </div>

  <div class="form-group my-3">
    <strong><%= form.label :email, style: "display: block" , class:"control-label col-sm-2 p-2" %></strong>
    <%= form.text_field :email, placeholder: "Enter an email" , class:"form-control w-75 mb-2 border border-dark" %>
  </div>

  <div class="form-group my-3">
    <strong><%= form.label :password, style: "display: block"  , class:"control-label col-sm-2 p-2" %></strong>
    <%= form.password_field :password, placeholder: "Choose a password", class:"form-control w-75 mb-2 border border-dark" %>
  </div>

  
  <%= form.collection_select :apartment, Apartment.order(:name),:id,:name, include_blank: true %>
  <%= form.collection_select :block, Block.group(:name),:name,:name, include_blank: true %>
  <%= form.collection_select :doorno, House.group(:doorno).select(:doorno),:doorno,:doorno, include_blank: true %>

  <div>
    <%= form.submit "Sign up"%>
  </div>


<% end %>
</div>
</body>

