<body style="background-color: rgb(242,180,7)">
  
  <% if notice!=nil %>
    <center>
      <p style="background-color: rgb(15, 247, 131); position:relative;width:50%;height:40px;padding-top:7px; border-radius: 5px; border: 1px solid rgb(0,100,0); color: rgb(0,100,0)">
        <%= notice %>
        <a href="" >
          <i style="position:absolute; top:10px;right:10px;color:rgb(0,100,0)" class="fa fa-close "></i>
        </a>
      </p>
    </center>
    <% end %>

    <% if alert!=nil %>
    <center>
      <p style="background-color: rgb(247, 198, 198); position:relative;width:50%;height:40px;padding-top:7px; border-radius: 5px; border: 1px solid rgb(168, 25, 25); color: rgb(168, 25, 25)">
        <%= alert %>
        <a href="" >
          <i style="position:absolute; top:10px;right:10px; color:rgb(168, 25, 25)" class="fa fa-close "></i>
        </a>
      </p>
    </center>
  <% end %>
  <br>
  <div style="display: flex;
              justify-content: center;
              align-items:center;
              flex-wrap: wrap;
              column-gap: 2rem;
              flex: 1;
              margin:0;
              -webkit-transform: translateY(25%);
              -ms-transform: translateY(25%);
              transform: translateY(25%);">
    <div style="width: max(20vw, 300px);" class="my-5">
      <div class="d-flex justify-content-center h1 text-dark">Sign up</div>
      <div class="d-flex justify-content-center">
        <%= image_tag("owner.png") %>
      </div>
    </div>

    <div style="width: max(20vw, 420px);">
      <div>
        <%= render "form", owner: @owner %>
      </div>

      <div style="align-items:center" class="d-flex justify-content-around py-3 w-75 mx-auto">
        <strong>
          Already have an account ? 
          <%= link_to "Log in", login_path("owner"), class:"btn btn-dark" %>
        </strong>
      </div>
    </div>
  </div>
  <br>
</body>